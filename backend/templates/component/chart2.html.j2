<div class="row">
    <div class="row" id="container" style="width: 50%;">
        <canvas id="line-chart-3" width="800" height="450"></canvas>
    </div>
    <div class="row" id="container" style="width: 50%;">
        <canvas id="line-chart-4" width="800" height="450"></canvas>
    </div>
</div>
{% block javascript %}
<script>
    new Chart(document.getElementById("line-chart-3"), {
        type: 'line',
        data: {
            labels: {{ stock.labels | safe}},
            datasets: [
                {
                    data: {{ stock.data | safe}},
                    label: "Actual stock price",
                    borderColor: "#3e95cd",
                    fill: false
                },
                {
                    data: {{ stock_predicted_data | safe}},
                    label: "Predicted stock price",
                    borderColor: "#8e5ea2",
                    fill: false
                }
            ]
        },
        options: {
            responsive: true,
            interaction: {
                intersect: false,
            },
            plugins: {
                legend: {
                    display: true
                },
                tooltips: {
                    titleFont: {
                        size: 40
                    },
                    bodyFont: {
                        size: 40
                    },
                }
            },
            elements: {
                point: {
                    radius: 0
                }
            },
            scales: {
                yAxes: [{
                    scaleLabel: {
                        display: true,
                        labelString: 'Close price'
                    }
                }],
                xAxes: [{
                    scaleLabel: {
                        display: true,
                        labelString: 'Date'
                    },
                    ticks: {
                        autoSkip: true,
                        maxTicksLimit: 25
                    }
                }],
            }
        }
    });
</script>
<script>
    new Chart(document.getElementById("line-chart-4"), {
        type: 'line',
        data: {
            labels: {{ stock.labels | safe}},
            datasets: [
                {
                    data: {{ stock.data | safe}},
                    label: "Actual stock price",
                    borderColor: "#3e95cd",
                    fill: false,
                },
                {
                    data: {{ stock_predicted_data | safe}},
                    label: "Predicted stock price",
                    borderColor: "#8e5ea2",
                    fill: false
                }
            ]
        },
        options: {
            responsive: true,
            interaction: {
                intersect: false,
            },
            plugins: {
                legend: {
                    display: true
                },
                tooltips: {
                    enabled: false
                }
            },
            scales: {
                yAxes: [{
                    scaleLabel: {
                        display: true,
                        labelString: 'Close price'
                    }
                }],
                xAxes: [{
                    scaleLabel: {
                        display: true,
                        labelString: 'Date'
                    },
                    ticks: {
                        autoSkip: true,
                        maxTicksLimit: 25
                    }
                }],
            }
        }
    });
</script>
{% endblock %}